{
  "name": "bottoms",
  "version": "0.0.10",
  "description": "A wrapper performant interactive bottom sheet with fully configurable options and simple to useðŸš€",
  "main": "index.ts",
  "module": "index.ts",
  "types": "src/types.d.ts",
  "react-native": "index.ts",
  "files": [
    "src",
    "lib",
    "mock.js"
  ],
  "keywords": [
    "react-native",
    "ios",
    "android",
    "bottom-sheet",
    "bottomsheet",
    "reanimated",
    "sheet",
    "expo",
    "expo-router",
